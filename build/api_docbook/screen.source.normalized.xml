<?xml version="1.0" encoding="UTF-8"?>
<file>
   <object title="screen">
      <methods>
         <method name="getCursorScreenPoint">
            <returns type="Object">
               <param name="x" type="Integer"/>
               <param name="y" type="Integer"/>
            </returns>
            <param name="x" type="Integer"/>
            <param name="y" type="Integer"/>
            <description>
               <list>
                  <item>
                     <para>x Integer</para>
                  </item>
                  <item>
                     <para>y Integer</para>
                  </item>
               </list>
               <para>The current absolute position of the mouse pointer.</para>
            </description>
         </method>
         <method name="getPrimaryDisplay">
            <returns type="Display">
               <description>
                  <para>The primary display.</para>
               </description>
            </returns>
         </method>
         <method name="getAllDisplays">
            <returns type="Display" isArray="true">
               <description>
                  <para>An array of displays that are currently available.</para>
               </description>
            </returns>
         </method>
         <method name="getDisplayNearestPoint">
            <param name="point" type="Object">
               <property name="x" type="Integer"/>
               <property name="y" type="Integer"/>
            </param>
            <returns type="Display">
               <description>
                  <para>The display nearest the specified point.</para>
               </description>
            </returns>
         </method>
         <method name="getDisplayMatching">
            <param name="rect" type="Rectangle"/>
            <returns type="Display">
               <description>
                  <para>The display that most closely intersects the provided bounds.</para>
               </description>
            </returns>
         </method>
      </methods>
   </object>
</file>
